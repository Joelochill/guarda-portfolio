---
const analyticsId = import.meta.env.PUBLIC_GOOGLE_ANALYTICS_ID;
---

<!-- Google tag (gtag.js) -->
<script async src=`https://www.googletagmanager.com/gtag/js?id=${analyticsId}`
></script>
<script is:inline define:vars={{ analyticsId }}>
  window.dataLayer = window.dataLayer || [];
  function gtag() {
    dataLayer.push(arguments);
  }
  gtag('js', new Date());

  gtag('config', analyticsId);
</script>
