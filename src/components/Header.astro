---
import DesktopNavigation from './DesktopNavigation.astro';
import DropdownButton from './DropdownButton.astro';
import LanguageSelector from './LanguageSelector.astro';
import Logo from './Logo.astro';

const { bgLight } = Astro.props;
---

<header class={bgLight ? 'bg-light' : 'bg-transparent'}>
  <Logo />
  <DesktopNavigation />
  <LanguageSelector />
  <DropdownButton />
</header>

<style>
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: sticky;
    top: 0;
    z-index: 1000;
    user-select: none;
    gap: 2em;
  }

  @media only screen and (min-width: 625px) {
    header {
      position: relative;
    }
  }
</style>
