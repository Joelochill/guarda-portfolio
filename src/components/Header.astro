---
import Logo from './Logo.astro'
import Navigation from './Navigation.astro'
import DesktopNavigation from './DesktopNavigation.astro'
import DropdownButton from './DropdownButton.astro'
---

<header>
  <Logo />
  <DropdownButton />
  <DesktopNavigation />
</header>

<style>
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: sticky;
    top: 0;
    z-index: 1000;
    user-select: none;
  }

  @media only screen and (max-width: 625px) {
    header {
      position: relative;
    }
  } 
</style>