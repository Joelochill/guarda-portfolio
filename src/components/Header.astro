---
import DropdownButton from './DropdownButton.astro';
import LanguageSelector from './LanguageSelector.astro';
import Logo from './Logo.astro';
import Navigation from './Navigation.astro';

const { transparent } = Astro.props;
---

<header class:list={[transparent ? 'transparent' : '']}>
  <Logo />
  <div class="hidden">
    <Navigation />
  </div>
  <div class="hidden">
    <LanguageSelector />
  </div>
  <DropdownButton />
</header>

<style>
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: sticky;
    top: 0;
    z-index: 1000;
    user-select: none;
    gap: 2em;
    background-color: var(--color-background);
    transition: background-color var(--transition-duration-main) ease;
  }

  .hidden {
    display: none;
  }

  .transparent {
    background-color: transparent;
  }

  @media only screen and (min-width: 625px) {
    header {
      position: relative;
      align-items: baseline;
    }

    .hidden {
      display: flex;
    }
  }
</style>
