---
import Logo from "./Logo.astro";
import Navigation from "./Navigation.astro";
import DropdownButton from "./DropdownButton.astro";
---

<header>
  <Logo />
  <Navigation />
  <DropdownButton />
</header>

<style>
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: sticky;
    top: 0;
    z-index: 1000;
    user-select: none;
  }
</style>