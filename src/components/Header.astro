---
import DropdownButton from './DropdownButton.astro';
import LanguageSelector from './LanguageSelector.astro';
import Logo from './Logo.astro';
import Navigation from './Navigation.astro';

const { bgLight } = Astro.props;
---

<header class={bgLight ? 'bg-light' : 'bg-transparent'}>
  <Logo />
  <div class="mobile-hidden">
    <Navigation />
  </div>
  <div class="mobile-hidden">
    <LanguageSelector />
  </div>
  <DropdownButton />
</header>

<style>
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: sticky;
    top: 0;
    z-index: 1000;
    user-select: none;
    gap: 2em;
  }

  .mobile-hidden {
    display: none;
  }

  @media only screen and (min-width: 625px) {
    header {
      position: relative;
    }

    .mobile-hidden {
      display: flex;
    }
  }
</style>
