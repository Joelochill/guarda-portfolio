---
import { getRelativeLocaleUrl } from 'astro:i18n';

const { currentLocale } = Astro;
const { pathname: currentPath } = Astro.url;

const relativePath = currentPath.replace('/en', '');
---

<nav>
  <a
    href={getRelativeLocaleUrl('es', relativePath)}
    class:list={['lang-link', currentLocale === 'es' && 'selected']}
    >es
  </a>
  <a
    href={getRelativeLocaleUrl('en', relativePath)}
    class:list={['lang-link', currentLocale === 'en' && 'selected']}>en</a
  >
</nav>

<style>
  nav {
    display: flex;
    gap: 0.5em;
    font-size: 1.25rem;
  }

  .selected {
    text-decoration: underline;
  }

  a {
    color: var(--color-text);
  }

  @media only screen and (width >= 625px) {
    nav {
      font-size: 1rem;
    }
  }
</style>
