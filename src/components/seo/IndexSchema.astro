---
import { Schema } from 'astro-seo-schema';
import { ogImageUrl } from '../../cms/queries';
import * as accounts from '../../utils/accounts.json';

const { bandcamp, instagram, spotify, youtube } = accounts.social;
const { currentLocale, site: siteUrl } = Astro;
const { href: currentUrl } = Astro.url;

const websiteId = `${siteUrl}#website`;
const guardaId = `${siteUrl}#guarda`;
const mejorSordoId = `${siteUrl}#mejor-sordo`;
const acitdxId = `${siteUrl}#acitdx`
---

<Schema
  item={{
    '@context': 'https://schema.org',
    '@graph': [
      {
        '@type': 'WebSite',
        '@id': websiteId,
        name: 'Joel Rico Rada | GUARDA',
        url: currentUrl,
        description:
          currentLocale === 'es'
            ? 'Página web oficial de GUARDA, proyecto musical creado por el artista sonoro Joel Rico Rada. Explora su álbum debut "La Piedra de La Locura", próximos conciertos y piezas experimentales que mezclan ruido, grabaciones de campo y spoken word.'
            : 'Official online platform for GUARDA, a music project by sound artist Joel Rico Rada. Explore the debut album "The Stone of Madness", upcoming live performances, and experimental pieces blending noise, field recordings, and spoken word.',
        inLanguage: currentLocale,
        publisher: { '@id': guardaId },
      },
      {
        '@type': 'MusicGroup',
        '@id': guardaId,
        name: 'GUARDA',
        description:
          currentLocale === 'es'
            ? 'Proyecto sonoro que combina síntesis modular, grabaciones de campo y spoken word. Creado por Joel Rico Rada, explora temas como la ansiedad, la identidad y la pérdida de la fe a través de texturas sonoras oscuras.'
            : 'Sound project blending modular synthesis, field recordings, and spoken word. Created by Joel Rico Rada, it explores themes of anxiety, identity, and loss of faith through dark sonic textures.',
        image: {
          '@type': 'ImageObject',
          url: ogImageUrl,
          width: '1200',
          height: '630',
          caption: 'Joel Rico Rada | GUARDA',
        },
        url: siteUrl.toString(),
        genre:
          currentLocale === 'es'
            ? ['Música experimental', 'Noise', 'Arte sonoro', 'Ambient']
            : ['Experimental Music', 'Noise', 'Sound Art', 'Ambient'],
        sameAs: [bandcamp, instagram, spotify, youtube],
      },
    ],
  }}
/>
