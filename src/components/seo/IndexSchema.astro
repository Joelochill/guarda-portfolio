---
import { Schema } from 'astro-seo-schema';
import { ogImageUrl } from '../../cms/queries';
import * as accounts from '../../utils/accounts.json';

const { bandcamp, instagram, spotify, youtube } = accounts.social;
const { currentLocale, site: siteUrl } = Astro;
const { href: currentUrl, pathname: currentPath } = Astro.url;

const webpageId = `${siteUrl}/#webpage`;
const guardaId = `${siteUrl}/#guarda`;
---

<Schema
  item={{
    '@context': 'https://schema.org',
    '@graph': [
      {
        '@type': 'WebSite',
        '@id': webpageId,
        name: 'Joel Rico Rada | GUARDA',
        url: currentUrl,
        description:
          currentLocale === 'es'
            ? 'Sitio oficial del artista sonoro Joel Rico Rada y su proyecto GUARDA.'
            : 'Official website of sound artist Joel Rico Rada and his project GUARDA.',
        inLanguage: currentLocale,
        publisher: { '@id': guardaId },
      },
      {
        '@type': 'MusicGroup',
        '@id': guardaId,
        name: 'GUARDA',
        description:
          currentLocale === 'es'
            ? 'Proyecto experimental de mÃºsica oscura y ruidosa.'
            : 'Experimental project of dark and noisy music.',
        image: ogImageUrl,
        url: siteUrl.toString(),
        sameAs: [bandcamp, instagram, spotify, youtube],
      },
    ],
  }}
/>
