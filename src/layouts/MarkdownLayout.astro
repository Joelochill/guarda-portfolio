---
import BaseLayout from './BaseLayout.astro';

const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title} description={frontmatter.description}>
  <div class="wrapper">
    <slot />
  </div>
</BaseLayout>

<style>
  .wrapper {
    padding-top: 0;
    font-size: 0.8rem;
  }
</style>
