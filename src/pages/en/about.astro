---
import { PortableText } from 'astro-portabletext';
import { aboutContentEn } from '../../cms/queries';
import AboutSchema from '../../components/seo/AboutSchema.astro';
import Layout from '../../layouts/Layout.astro';

const title = 'About';
const description =
  "Discover GUARDA - Joel Rico Rada's sound project blending field recordings, modular synthesis, and spoken word to meditate on madness, death, and transcendence.";
---

<Layout title={title} description={description}>
  <AboutSchema slot="inside-head" />
  <main transition:name="main" transition:animate="fade">
    <PortableText value={aboutContentEn} />
  </main>
</Layout>

<style>
  main {
    gap: 1.5em;
    align-content: start;
    max-inline-size: 110ch;
  }
</style>
