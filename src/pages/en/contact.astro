---
import ContactForm from '../../components/ContactForm.astro';
import Layout from '../../layouts/Layout.astro';

const seo = {
  title: 'Contact | GUARDA',
  description:
    'Get in touch with Joel Rico Rada, the creator of GUARDA. Send your questions, press inquiries, or collaboration requests.',
};
---

<Layout lang="en" seo={seo}>
  <main transition:name="main" transition:animate="fade">
    <ContactForm />
    <p>
      Or send an email to <a href="mailto:info@joelricorada.com">
        info@joelricorada.com</a
      >
    </p>
  </main>
</Layout>

<style>
  main {
    display: grid;
    gap: 3em;
    align-content: space-between;
  }

  a {
    color: var(--color-accent);
  }

  a:hover {
    text-decoration: underline;
  }
</style>
