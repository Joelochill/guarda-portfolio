---
import ContactForm from '../../components/ContactForm.astro';
import Layout from '../../layouts/Layout.astro';

const contactEmail = import.meta.env.CONTACT_EMAIL;

const seo = {
  title: 'Contact',
  description:
    'Get in touch with Joel Rico Rada, the creator of GUARDA. Send your questions, press inquiries, or collaboration requests.',
};
---

<Layout seo={seo}>
  <main transition:name="main" transition:animate="fade">
    <ContactForm />
    <p>
      Or send an email to <a href={`mailto:${contactEmail}`}> {contactEmail}</a>
    </p>
  </main>

  <style>
    main {
      display: grid;
      gap: 3em;
      align-content: space-between;
    }

    a {
      color: var(--color-accent);
    }

    a:hover {
      text-decoration: underline;
    }
  </style>
</Layout>
