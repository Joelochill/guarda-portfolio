---
import { getImage } from 'astro:assets';
import { backgroundUrl, ogImageUrl } from '../../cms/queries';
import Layout from '../../layouts/Layout.astro';
import accounts from '../../utils/accounts.json';

const title = 'Home';
const description =
  'Official page of GUARDA, the music project by Joel Rico Rada. Explore his music, concerts, and journey.';

const { social } = accounts;

const background = await getImage({
  src: backgroundUrl,
  format: 'webp',
  inferSize: true,
});

const siteUrl = Astro.site;

const structuredData = {
  '@context': 'https://schema.org',
  '@graph': [
    {
      '@type': 'Person',
      name: 'Joel Rico Rada',
      url: siteUrl,
      image: ogImageUrl,
      sameAs: [social.instagram, social.youtube],
      jobTitle: 'Sound Artist',
      worksFor: {
        '@type': 'Organization',
        name: 'GUARDA',
      },
    },
    {
      '@type': 'MusicGroup',
      name: 'GUARDA',
      member: {
        '@type': 'Person',
        name: 'Joel Rico Rada',
      },
      genre: ['Electronic', 'Ambient', 'Experimental'],
      url: siteUrl,
      sameAs: [social.bandcamp, social.spotify],
    },
  ],
};
---

<Layout
  title={title}
  description={description}
  structuredData={structuredData}
  backgroundImage={background}
>
  <main transition:name="main" transition:animate="fade"></main>
</Layout>
