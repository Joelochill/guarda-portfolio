---
import EventList from '../../components/EventList.astro';
import Layout from '../../layouts/Layout.astro';
import { liveContentEN } from '../../cms/queries';
---

<Layout title="Live - Guarda" lang="en">
  <main transition:name="main" transition:animate="fade">
    {
      liveContentEN.map(({ year, events }) => (
        <EventList year={year} events={events} />
      ))
    }
  </main>
</Layout>

<style>
  main {
    grid-auto-flow: row;
    gap: 1.5em;
    align-content: start;
  }
</style>
