---
import Image from 'astro/components/Image.astro';
import Layout from '../layouts/Layout.astro';
import { homeImage } from '../sanityQueries';
---

<Layout title="Guarda" lang="es" viewportRestricted>
  <div class="wrapper">
    <Image
      src={homeImage.url}
      alt={homeImage.alt}
      widths={[320, 540, 720]}
      inferSize
      sizes={`(max-width: 360px) 320px, (max-width: 720px) 540px, (max-width: 1600px) 540px`}
    />
  </div>
</Layout>

<style>
  .wrapper {
    display: flex;
    width: 100%;
    height: 100%;
    justify-content: center;
    align-items: center;
  }

  .wrapper img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }
</style>
