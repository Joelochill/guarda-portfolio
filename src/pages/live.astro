---
import EventList from '../components/EventList.astro';
import Layout from '../layouts/Layout.astro';
import { liveContentES } from '../cms/queries';
---

<Layout
  title="Live | GUARDA"
  lang="es"
  description="Consulta la lista de conciertos de GUARDA, el proyecto de Joel Rico Rada. Descubre prÃ³ximas fechas y revive sus actuaciones pasadas."
>
  <main transition:name="main" transition:animate="fade">
    {
      liveContentES.map(({ year, events }) => (
        <EventList year={year} events={events} />
      ))
    }
  </main>
</Layout>

<style>
  main {
    grid-auto-flow: row;
    gap: 1.5em;
    align-content: start;
  }
</style>
