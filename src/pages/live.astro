---
import EventList from '../components/EventList.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import { liveContent } from '../sanityQueries';
---

<BaseLayout title="Live - Guarda" lang="es">
  <div class="wrapper">
    {
      liveContent.map(({ year, events }) => (
        <EventList year={year} events={events} />
      ))
    }
  </div>
</BaseLayout>

<style>
  .wrapper {
    display: flex;
    flex-direction: column;
    gap: 1.25em;
  }
</style>
